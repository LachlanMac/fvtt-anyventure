<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <div class="resources flexrow">
        <div class="resource flex2">
          <label for="system.details.race" class="resource-label">Race</label>
          <input type="text" name="system.details.race" value="{{system.details.race}}" data-dtype="String"/>
        </div>
        <div class="resource flex2">
          <label for="system.details.culture" class="resource-label">Culture</label>
          <input type="text" name="system.details.culture" value="{{system.details.culture}}" data-dtype="String"/>
        </div>
        <div class="resource flex1">
          <label for="system.modulePoints.total" class="resource-label">Module Points</label>
          <input type="text" name="system.modulePoints.total" value="{{system.modulePoints.total}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="skills">Skills</a>
    <a class="item" data-tab="modules">Modules</a>
    <a class="item" data-tab="equipment">Equipment</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="biography">Biography</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Skills Tab --}}
    <div class="tab flexrow" data-group="primary" data-tab="skills">
      <div class="left-column">
        
        {{!-- Attributes --}}
        <div class="attributes flexrow">
          <div class="attribute-group">
            <h3>Attributes</h3>
            {{#each system.attributes as |attribute key|}}
            <div class="attribute flexrow">
              <label for="system.attributes.{{key}}.value" class="attribute-label rollable attribute-roll" data-attribute="{{key}}">{{capitalize key}}</label>
              <input type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" data-dtype="Number" min="1" max="4"/>
            </div>
            {{/each}}
            <div class="attribute-points">
              <label>Available Points: {{availableAttributePoints}}</label>
            </div>
          </div>
        </div>

        {{!-- Resources --}}
        <div class="resources flexrow">
          <div class="resource">
            <label for="system.resources.health.value" class="resource-label">Health</label>
            <div class="resource-content flexrow flex-center">
              <input type="number" name="system.resources.health.value" value="{{system.resources.health.value}}" data-dtype="Number"/>
              <span> / </span>
              <input type="number" name="system.resources.health.max" value="{{system.resources.health.max}}" data-dtype="Number"/>
            </div>
          </div>
          <div class="resource">
            <label for="system.resources.resolve.value" class="resource-label">Resolve</label>
            <div class="resource-content flexrow flex-center">
              <input type="number" name="system.resources.resolve.value" value="{{system.resources.resolve.value}}" data-dtype="Number"/>
              <span> / </span>
              <input type="number" name="system.resources.resolve.max" value="{{system.resources.resolve.max}}" data-dtype="Number"/>
            </div>
          </div>
          <div class="resource">
            <label for="system.resources.energy.value" class="resource-label">Energy</label>
            <div class="resource-content flexrow flex-center">
              <input type="number" name="system.resources.energy.value" value="{{system.resources.energy.value}}" data-dtype="Number"/>
              <span> / </span>
              <input type="number" name="system.resources.energy.max" value="{{system.resources.energy.max}}" data-dtype="Number"/>
            </div>
          </div>
        </div>

      </div>

      <div class="right-column">
        {{!-- Skills --}}
        <div class="skills">
          <h3>Skills</h3>
          
          {{!-- Basic Skills --}}
          <div class="skill-category">
            <h4>Basic Skills</h4>
            {{#each skillCategories.basic as |skill key|}}
            <div class="skill flexrow">
              <label class="skill-name rollable skill-roll" data-category="basic" data-skill="{{key}}">{{capitalize key}}</label>
              <div class="skill-fields flexrow">
                <span class="skill-talent">{{skill.talent}}</span>
                <input type="number" class="skill-value" name="system.skills.basic.{{key}}.value" value="{{skill.value}}" data-dtype="Number" min="0" max="6"/>
                <span class="skill-dice">{{skillDie skill.value}}</span>
              </div>
            </div>
            {{/each}}
          </div>

          {{!-- Weapon Skills --}}
          <div class="skill-category">
            <h4>Weapon Skills</h4>
            {{#each skillCategories.weapon as |skill key|}}
            <div class="skill flexrow">
              <label class="skill-name rollable skill-roll" data-category="weapon" data-skill="{{key}}">{{capitalize key}}</label>
              <div class="skill-fields flexrow">
                <span class="skill-talent">{{skill.talent}}</span>
                <input type="number" class="skill-value" name="system.skills.weapon.{{key}}.value" value="{{skill.value}}" data-dtype="Number" min="0" max="6"/>
                <span class="skill-dice">{{skillDie skill.value}}</span>
              </div>
            </div>
            {{/each}}
          </div>

          {{!-- Magic Skills --}}
          <div class="skill-category">
            <h4>Magic Skills</h4>
            {{#each skillCategories.magic as |skill key|}}
            <div class="skill flexrow">
              <label class="skill-name rollable skill-roll" data-category="magic" data-skill="{{key}}">{{capitalize key}}</label>
              <div class="skill-fields flexrow">
                <span class="skill-talent">{{skill.talent}}</span>
                <input type="number" class="skill-value" name="system.skills.magic.{{key}}.value" value="{{skill.value}}" data-dtype="Number" min="0" max="6"/>
                <span class="skill-dice">{{skillDie skill.value}}</span>
              </div>
            </div>
            {{/each}}
          </div>

          {{!-- Crafting Skills --}}
          <div class="skill-category">
            <h4>Crafting Skills</h4>
            {{#each skillCategories.crafting as |skill key|}}
            <div class="skill flexrow">
              <label class="skill-name rollable skill-roll" data-category="crafting" data-skill="{{key}}">{{capitalize key}}</label>
              <div class="skill-fields flexrow">
                <span class="skill-talent">{{skill.talent}}</span>
                <input type="number" class="skill-value" name="system.skills.crafting.{{key}}.value" value="{{skill.value}}" data-dtype="Number" min="0" max="6"/>
                <span class="skill-dice">{{skillDie skill.value}}</span>
              </div>
            </div>
            {{/each}}
          </div>

        </div>
      </div>
    </div>

    {{!-- Modules Tab --}}
    <div class="tab flexrow" data-group="primary" data-tab="modules">
      <div class="modules">
        <h3>Modules</h3>
        <div class="module-points">
          <label>Available Module Points: {{availableModulePoints}}</label>
        </div>
        <div class="items-header">
          <div class="item-name">Name</div>
          <div class="item-type">Type</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create item" data-type="module">
              <i class="fas fa-plus"></i> Add Module
            </a>
          </div>
        </div>
        
        <ol class="items-list">
          {{#each modules as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image">
                <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-type">{{item.system.moduleType}}</div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
    </div>

    {{!-- Equipment Tab --}}
    <div class="tab flexrow" data-group="primary" data-tab="equipment">
      <div class="equipment">
        <h3>Equipment</h3>
        
        {{!-- Weapons --}}
        <div class="equipment-section">
          <h4>Weapons</h4>
          <div class="items-header">
            <div class="item-name">Name</div>
            <div class="item-weight">Weight</div>
            <div class="item-damage">Damage</div>
            <div class="item-controls">
              <a class="item-control item-create" title="Create weapon" data-type="weapon"><i class="fas fa-plus"></i></a>
            </div>
          </div>
          
          <ol class="items-list">
            {{#each weapons as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-weight">{{item.system.weight}}</div>
              <div class="item-damage">{{item.system.weapon_data.primary.damage}}/{{item.system.weapon_data.primary.damage_extra}}</div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        {{!-- Armor --}}
        <div class="equipment-section">
          <h4>Armor</h4>
          <div class="items-header">
            <div class="item-name">Name</div>
            <div class="item-weight">Weight</div>
            <div class="item-mitigation">Mitigation</div>
            <div class="item-controls">
              <a class="item-control item-create" title="Create armor" data-type="armor"><i class="fas fa-plus"></i></a>
            </div>
          </div>
          
          <ol class="items-list">
            {{#each armor as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-weight">{{item.system.weight}}</div>
              <div class="item-mitigation">{{item.system.armor_data.base_mitigation}}</div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        {{!-- General Equipment --}}
        <div class="equipment-section">
          <h4>General Equipment</h4>
          <div class="items-header">
            <div class="item-name">Name</div>
            <div class="item-weight">Weight</div>
            <div class="item-value">Value</div>
            <div class="item-controls">
              <a class="item-control item-create" title="Create equipment" data-type="equipment"><i class="fas fa-plus"></i></a>
            </div>
          </div>
          
          <ol class="items-list">
            {{#each gear as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-weight">{{item.system.weight}}</div>
              <div class="item-value">{{item.system.value}}</div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>

    {{!-- Spells Tab --}}
    <div class="tab flexrow" data-group="primary" data-tab="spells">
      <div class="spells">
        <h3>Spells</h3>
        <div class="spell-slots">
          <label>Spell Slots: {{system.spells.length}} / {{system.spellSlots.max}}</label>
        </div>
        <div class="items-header">
          <div class="item-name">Name</div>
          <div class="item-school">School</div>
          <div class="item-energy">Energy</div>
          <div class="item-check">Check</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create spell" data-type="spell"><i class="fas fa-plus"></i></a>
          </div>
        </div>
        
        <ol class="items-list">
          {{#each spells as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image">
                <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-school">{{item.system.school}}</div>
            <div class="item-energy">{{item.system.energy}}</div>
            <div class="item-check">{{item.system.checkToCast}}</div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      <div class="biography-content">
        <div class="physical-traits">
          <h3>Physical Traits</h3>
          <div class="traits-grid">
            <div class="trait">
              <label for="system.physicalTraits.size">Size</label>
              <input type="text" name="system.physicalTraits.size" value="{{system.physicalTraits.size}}" data-dtype="String"/>
            </div>
            <div class="trait">
              <label for="system.physicalTraits.height">Height</label>
              <input type="text" name="system.physicalTraits.height" value="{{system.physicalTraits.height}}" data-dtype="String"/>
            </div>
            <div class="trait">
              <label for="system.physicalTraits.weight">Weight</label>
              <input type="text" name="system.physicalTraits.weight" value="{{system.physicalTraits.weight}}" data-dtype="String"/>
            </div>
            <div class="trait">
              <label for="system.physicalTraits.gender">Gender</label>
              <input type="text" name="system.physicalTraits.gender" value="{{system.physicalTraits.gender}}" data-dtype="String"/>
            </div>
          </div>
        </div>

        <div class="biography-section">
          <h3>Appearance</h3>
          <div class="editor">
            {{editor system.details.appearance target="system.details.appearance" button=true owner=owner editable=editable}}
          </div>
        </div>

        <div class="biography-section">
          <h3>Biography</h3>
          <div class="editor">
            {{editor system.details.biography target="system.details.biography" button=true owner=owner editable=editable}}
          </div>
        </div>

        <div class="languages-section">
          <h3>Languages</h3>
          {{#each skillCategories.language as |language key|}}
          <div class="language flexrow">
            <label class="language-name">{{capitalize key}}</label>
            <input type="number" name="system.skills.language.{{key}}.value" value="{{language.value}}" data-dtype="Number" min="0" max="3"/>
            <span class="language-level">
              {{#if (eq language.value 0)}}Unknown{{/if}}
              {{#if (eq language.value 1)}}Basic{{/if}}
              {{#if (eq language.value 2)}}Fluent{{/if}}
              {{#if (eq language.value 3)}}Mastery{{/if}}
            </span>
          </div>
          {{/each}}
        </div>

        <div class="movement-section">
          <h3>Movement</h3>
          <div class="movement-grid">
            <div class="movement-type">
              <label for="system.movement.standard">Standard</label>
              <input type="number" name="system.movement.standard" value="{{system.movement.standard}}" data-dtype="Number"/>
            </div>
            <div class="movement-type">
              <label for="system.movement.swim">Swim</label>
              <input type="number" name="system.movement.swim" value="{{system.movement.swim}}" data-dtype="Number"/>
            </div>
            <div class="movement-type">
              <label for="system.movement.climb">Climb</label>
              <input type="number" name="system.movement.climb" value="{{system.movement.climb}}" data-dtype="Number"/>
            </div>
            <div class="movement-type">
              <label for="system.movement.fly">Fly</label>
              <input type="number" name="system.movement.fly" value="{{system.movement.fly}}" data-dtype="Number"/>
            </div>
          </div>
        </div>

        <div class="mitigation-section">
          <h3>Damage Mitigation</h3>
          <div class="mitigation-grid">
            {{#each system.mitigation as |value type|}}
            <div class="mitigation-type">
              <label for="system.mitigation.{{type}}">{{capitalize type}}</label>
              <input type="number" name="system.mitigation.{{type}}" value="{{value}}" data-dtype="Number"/>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

  </section>
</form>
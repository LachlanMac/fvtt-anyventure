<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  <div class="sheet-wrapper">
    <aside class="left-sidebar">
      <div class="character-header">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        <h1 class="charname">
          <input name="name" type="text" value="{{actor.name}}" placeholder="Creature Name"/>
        </h1>
        <div class="npc-type-select" style="margin-top:6px;">
          <label>Rank:</label>
          <select name="system.creatureTier" data-dtype="String" style="width: 140px;">
            <option value="minion" {{#if (eq system.creatureTier "minion")}}selected{{/if}}>Minion</option>
            <option value="thrall" {{#if (eq system.creatureTier "thrall")}}selected{{/if}}>Thrall</option>
            <option value="foe" {{#if (eq system.creatureTier "foe")}}selected{{/if}}>Foe</option>
            <option value="champion" {{#if (eq system.creatureTier "champion")}}selected{{/if}}>Champion</option>
            <option value="elite" {{#if (eq system.creatureTier "elite")}}selected{{/if}}>Elite</option>
            <option value="legend" {{#if (eq system.creatureTier "legend")}}selected{{/if}}>Legend</option>
            <option value="mythic" {{#if (eq system.creatureTier "mythic")}}selected{{/if}}>Mythic</option>
            <option value="standard" {{#if (eq system.creatureTier "standard")}}selected{{/if}}>Standard</option>
          </select>
        </div>
      </div>

      <div class="resources-section">
        <div class="resource-group">
          <div class="resource-quick-actions" title="Resource Actions">
            <button type="button" class="resource-btn quick-action-btn" data-action="recover" title="Recover Resources">
              <i class="fas fa-heart"></i>
            </button>
            <button type="button" class="resource-btn quick-action-btn" data-action="damage" title="Take Damage">
              <i class="fas fa-heart-broken"></i>
            </button>
            {{#if (eq system.creatureTier "champion")}}<button type="button" class="resource-btn quick-action-btn" data-action="start-turn" title="Start Turn"><i class="fas fa-hourglass-start"></i></button>{{/if}}
            {{#if (eq system.creatureTier "elite")}}<button type="button" class="resource-btn quick-action-btn" data-action="start-turn" title="Start Turn"><i class="fas fa-hourglass-start"></i></button>{{/if}}
            {{#if (eq system.creatureTier "legend")}}<button type="button" class="resource-btn quick-action-btn" data-action="start-turn" title="Start Turn"><i class="fas fa-hourglass-start"></i></button>{{/if}}
            {{#if (eq system.creatureTier "mythic")}}<button type="button" class="resource-btn quick-action-btn" data-action="start-turn" title="Start Turn"><i class="fas fa-hourglass-start"></i></button>{{/if}}
            <button type="button" class="resource-btn quick-action-btn" data-action="rest" title="Restore to Full">
              <i class="fas fa-bed"></i>
            </button>
            <button type="button" class="resource-btn quick-action-btn" data-action="fall-unconscious" title="Fall Unconscious">
              <i class="fas fa-user-injured"></i>
            </button>
          </div>

          <div class="resource-bar health">
            <label>Health</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.health.value" value="{{system.resources.health.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.health.max" value="{{system.resources.health.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.health.value system.resources.health.max}}%"></div>
          </div>
          <div class="resource-bar resolve">
            <label>Resolve</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.resolve.value" value="{{system.resources.resolve.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.resolve.max" value="{{system.resources.resolve.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.resolve.value system.resources.resolve.max}}%"></div>
          </div>
          {{#if (eq system.creatureTier "champion")}}
          <div class="resource-bar energy">
            <label>Energy</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.energy.value" value="{{system.resources.energy.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.energy.max" value="{{system.resources.energy.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.energy.value system.resources.energy.max}}%"></div>
          </div>
          {{/if}}
          {{#if (eq system.creatureTier "elite")}}
          <div class="resource-bar energy">
            <label>Energy</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.energy.value" value="{{system.resources.energy.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.energy.max" value="{{system.resources.energy.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.energy.value system.resources.energy.max}}%"></div>
          </div>
          {{/if}}
          {{#if (eq system.creatureTier "legend")}}
          <div class="resource-bar energy">
            <label>Energy</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.energy.value" value="{{system.resources.energy.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.energy.max" value="{{system.resources.energy.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.energy.value system.resources.energy.max}}%"></div>
          </div>
          {{/if}}
          {{#if (eq system.creatureTier "mythic")}}
          <div class="resource-bar energy">
            <label>Energy</label>
            <div class="resource-controls">
              <div class="resource-values">
                <input type="number" name="system.resources.energy.value" value="{{system.resources.energy.value}}"/>
                <span class="separator">/</span>
                <input type="number" name="system.resources.energy.max" value="{{system.resources.energy.max}}"/>
              </div>
            </div>
            <div class="resource-fill" style="width: {{percentage system.resources.energy.value system.resources.energy.max}}%"></div>
          </div>
          {{/if}}
        </div>
      </div>

      {{> "systems/anyventure/templates/partials/mitigations.hbs"}}
      {{> "systems/anyventure/templates/partials/movement.hbs"}}
    </aside>

    <main class="main-content">
      <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="skills">Skills</a>
        <a class="item" data-tab="abilities">Abilities</a>
        <a class="item" data-tab="traits-injuries">Traits & Injuries</a>
      </nav>

      <section class="sheet-body">
        <div class="tab skills active" data-group="primary" data-tab="skills">
          {{> "systems/anyventure/templates/partials/npc-skills.hbs"}}
        </div>

        <div class="tab abilities" data-group="primary" data-tab="abilities">
          {{> "systems/anyventure/templates/partials/npc-abilities.hbs"}}
        </div>

        <div class="tab traits-injuries" data-group="primary" data-tab="traits-injuries">
          {{> "systems/anyventure/templates/partials/modules.hbs"}}
        </div>
      </section>
    </main>
  </div>
</form>

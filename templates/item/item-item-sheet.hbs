<form class="{{cssClass}} {{item.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  {{> "systems/anyventure/templates/partials/items/item-header.hbs"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item active" data-tab="basic">Basic</a>
    {{#if (or (eq system.itemType "body") (eq system.itemType "headwear") (eq system.itemType "gloves") (eq system.itemType "boots") (eq system.itemType "accessory") (eq system.itemType "cloak"))}}
      <a class="item" data-tab="equipment">Equipment</a>
    {{/if}}
    {{#if (eq system.itemType "weapon")}}
      <a class="item" data-tab="weapon">Weapon</a>
    {{/if}}
    <a class="item" data-tab="bonuses">Bonuses</a>
    <a class="item" data-tab="mitigation">Mitigation</a>
    <a class="item" data-tab="special">Special</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Basic Tab --}}
    <div class="tab active" data-group="primary" data-tab="basic">
      <div class="item-basic-grid">

        {{!-- Basic Information Section --}}
        <div class="basic-info-section">
          <h3>Basic Information</h3>

          <div class="form-grid">
            <div class="form-group">
              <label>Item Type</label>
              <select name="system.itemType" class="itemtype-selector">
                <optgroup label="Equipment">
                  <option value="body" {{#if (eq system.itemType "body")}}selected{{/if}}>Body Armor</option>
                  <option value="headwear" {{#if (eq system.itemType "headwear")}}selected{{/if}}>Headwear</option>
                  <option value="gloves" {{#if (eq system.itemType "gloves")}}selected{{/if}}>Gloves</option>
                  <option value="boots" {{#if (eq system.itemType "boots")}}selected{{/if}}>Boots</option>
                  <option value="accessory" {{#if (eq system.itemType "accessory")}}selected{{/if}}>Accessory</option>
                  <option value="cloak" {{#if (eq system.itemType "cloak")}}selected{{/if}}>Cloak</option>
                </optgroup>
                <optgroup label="Weapons">
                  <option value="weapon" {{#if (eq system.itemType "weapon")}}selected{{/if}}>Weapon</option>
                </optgroup>
                <optgroup label="General Items">
                  <option value="tool" {{#if (eq system.itemType "tool")}}selected{{/if}}>Tool</option>
                  <option value="consumable" {{#if (eq system.itemType "consumable")}}selected{{/if}}>Consumable</option>
                  <option value="crafting" {{#if (eq system.itemType "crafting")}}selected{{/if}}>Crafting Material</option>
                  <option value="treasure" {{#if (eq system.itemType "treasure")}}selected{{/if}}>Treasure</option>
                  <option value="misc" {{#if (eq system.itemType "misc")}}selected{{/if}}>Miscellaneous</option>
                </optgroup>
              </select>
            </div>

            <div class="form-group">
              <label>Rarity</label>
              <select name="system.rarity">
                <option value="common" {{#if (eq system.rarity "common")}}selected{{/if}}>Common</option>
                <option value="uncommon" {{#if (eq system.rarity "uncommon")}}selected{{/if}}>Uncommon</option>
                <option value="rare" {{#if (eq system.rarity "rare")}}selected{{/if}}>Rare</option>
                <option value="very_rare" {{#if (eq system.rarity "very_rare")}}selected{{/if}}>Very Rare</option>
                <option value="legendary" {{#if (eq system.rarity "legendary")}}selected{{/if}}>Legendary</option>
                <option value="artifact" {{#if (eq system.rarity "artifact")}}selected{{/if}}>Artifact</option>
              </select>
            </div>

            <div class="form-group">
              <label>Weight (lbs)</label>
              <input type="number" name="system.weight" value="{{system.weight}}" step="0.1" placeholder="0"/>
            </div>

            <div class="form-group">
              <label>Value (coins)</label>
              <input type="number" name="system.value" value="{{system.value}}" placeholder="0"/>
            </div>

            <div class="form-group">
              <label>Stack Limit</label>
              <input type="number" name="system.stack_limit" value="{{system.stack_limit}}" placeholder="0" title="0 = no limit"/>
            </div>

            <div class="form-group">
              <label>Source</label>
              <input type="text" name="system.source" value="{{system.source}}" placeholder="Source book or origin"/>
            </div>
          </div>
        </div>

        {{!-- Type-Specific Basic Properties --}}
        {{#if (eq system.itemType "weapon")}}
        <div class="weapon-basic-section">
          <h3>Weapon Properties</h3>
          <div class="form-grid">
            <div class="form-group">
              <label>Weapon Category</label>
              <select name="system.weapon_category">
                <option value="brawling" {{#if (eq system.weapon_category "brawling")}}selected{{/if}}>Brawling</option>
                <option value="throwing" {{#if (eq system.weapon_category "throwing")}}selected{{/if}}>Throwing</option>
                <option value="simpleMeleeWeapons" {{#if (eq system.weapon_category "simpleMeleeWeapons")}}selected{{/if}}>Simple Melee</option>
                <option value="simpleRangedWeapons" {{#if (eq system.weapon_category "simpleRangedWeapons")}}selected{{/if}}>Simple Ranged</option>
                <option value="complexMeleeWeapons" {{#if (eq system.weapon_category "complexMeleeWeapons")}}selected{{/if}}>Complex Melee</option>
                <option value="complexRangedWeapons" {{#if (eq system.weapon_category "complexRangedWeapons")}}selected{{/if}}>Complex Ranged</option>
              </select>
            </div>

            <div class="form-group">
              <label>Hands Required</label>
              <select name="system.hands">
                <option value="1" {{#if (eq system.hands 1)}}selected{{/if}}>One-Handed</option>
                <option value="2" {{#if (eq system.hands 2)}}selected{{/if}}>Two-Handed</option>
              </select>
            </div>

            <div class="form-group checkbox-group">
              <label>
                <input type="checkbox" name="system.holdable" {{#if system.holdable}}checked{{/if}}/>
                Holdable
              </label>
            </div>
          </div>
        </div>
        {{/if}}

        {{#if (eq system.itemType "consumable")}}
        <div class="consumable-basic-section">
          <h3>Consumable Properties</h3>
          <div class="form-grid">
            <div class="form-group">
              <label>Consumable Category</label>
              <select name="system.consumable_category">
                <option value="potion" {{#if (eq system.consumable_category "potion")}}selected{{/if}}>Potion</option>
                <option value="food" {{#if (eq system.consumable_category "food")}}selected{{/if}}>Food</option>
                <option value="poison" {{#if (eq system.consumable_category "poison")}}selected{{/if}}>Poison</option>
                <option value="scroll" {{#if (eq system.consumable_category "scroll")}}selected{{/if}}>Scroll</option>
                <option value="bomb" {{#if (eq system.consumable_category "bomb")}}selected{{/if}}>Bomb</option>
                <option value="ammunition" {{#if (eq system.consumable_category "ammunition")}}selected{{/if}}>Ammunition</option>
                <option value="other" {{#if (eq system.consumable_category "other")}}selected{{/if}}>Other</option>
              </select>
            </div>
          </div>
        </div>
        {{/if}}

        {{!-- General Item Flags --}}
        <div class="item-flags-section">
          <h3>Item Properties</h3>
          <div class="checkbox-grid">
            <label class="checkbox-item">
              <input type="checkbox" name="system.magical" {{#if system.magical}}checked{{/if}}/>
              <span>Magical Item</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="system.consumable" {{#if system.consumable}}checked{{/if}}/>
              <span>Single Use</span>
            </label>
          </div>
        </div>

      </div>
    </div>

    {{!-- Equipment Tab (for armor/equipment types) --}}
    {{#if (or (eq system.itemType "body") (eq system.itemType "headwear") (eq system.itemType "gloves") (eq system.itemType "boots") (eq system.itemType "accessory") (eq system.itemType "cloak"))}}
    <div class="tab" data-group="primary" data-tab="equipment">
      <div class="equipment-properties">

        <div class="equipment-section">
          <h3>Equipment Properties</h3>
          <div class="form-grid">
            <div class="form-group">
              <label>Encumbrance Penalty</label>
              <input type="number" name="system.encumbrance_penalty" value="{{system.encumbrance_penalty}}" placeholder="0"/>
              <small>Movement penalty when worn</small>
            </div>
          </div>
        </div>

        {{!-- Shield Properties (if applicable) --}}
        {{#if (or (eq system.itemType "accessory") (eq system.itemType "body"))}}
        <div class="shield-section">
          <h3>Shield Properties</h3>
          <div class="form-grid">
            <div class="form-group">
              <label>Shield Category</label>
              <select name="system.shield_category">
                <option value="" {{#unless system.shield_category}}selected{{/unless}}>Not a Shield</option>
                <option value="light" {{#if (eq system.shield_category "light")}}selected{{/if}}>Light Shield</option>
                <option value="heavy" {{#if (eq system.shield_category "heavy")}}selected{{/if}}>Heavy Shield</option>
              </select>
            </div>
          </div>
        </div>
        {{/if}}

      </div>
    </div>
    {{/if}}

    {{!-- Weapon Tab (for weapon items) --}}
    {{#if (eq system.itemType "weapon")}}
    <div class="tab" data-group="primary" data-tab="weapon">
      <div class="weapon-properties">

        {{!-- Primary Attack --}}
        <div class="attack-section">
          <h3>Primary Attack</h3>
          <div class="weapon-attack-grid">
            <div class="form-group">
              <label>Damage</label>
              <input type="number" name="system.primary.damage" value="{{system.primary.damage}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Extra Damage</label>
              <input type="number" name="system.primary.damage_extra" value="{{system.primary.damage_extra}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Damage Type</label>
              <select name="system.primary.damage_type">
                <option value="physical" {{#if (eq system.primary.damage_type "physical")}}selected{{/if}}>Physical</option>
                <option value="heat" {{#if (eq system.primary.damage_type "heat")}}selected{{/if}}>Heat</option>
                <option value="cold" {{#if (eq system.primary.damage_type "cold")}}selected{{/if}}>Cold</option>
                <option value="lightning" {{#if (eq system.primary.damage_type "lightning")}}selected{{/if}}>Lightning</option>
                <option value="dark" {{#if (eq system.primary.damage_type "dark")}}selected{{/if}}>Dark</option>
                <option value="divine" {{#if (eq system.primary.damage_type "divine")}}selected{{/if}}>Divine</option>
                <option value="arcane" {{#if (eq system.primary.damage_type "arcane")}}selected{{/if}}>Arcane</option>
                <option value="psychic" {{#if (eq system.primary.damage_type "psychic")}}selected{{/if}}>Psychic</option>
                <option value="toxic" {{#if (eq system.primary.damage_type "toxic")}}selected{{/if}}>Toxic</option>
              </select>
            </div>
            <div class="form-group">
              <label>Attack Category</label>
              <select name="system.primary.category">
                <option value="slash" {{#if (eq system.primary.category "slash")}}selected{{/if}}>Slash</option>
                <option value="thrust" {{#if (eq system.primary.category "thrust")}}selected{{/if}}>Thrust</option>
                <option value="blunt" {{#if (eq system.primary.category "blunt")}}selected{{/if}}>Blunt</option>
                <option value="ranged" {{#if (eq system.primary.category "ranged")}}selected{{/if}}>Ranged</option>
              </select>
            </div>
            <div class="form-group">
              <label>Min Range</label>
              <input type="number" name="system.primary.min_range" value="{{system.primary.min_range}}" placeholder="1"/>
            </div>
            <div class="form-group">
              <label>Max Range</label>
              <input type="number" name="system.primary.max_range" value="{{system.primary.max_range}}" placeholder="1"/>
            </div>
          </div>

          {{!-- Secondary Damage --}}
          <div class="secondary-damage-section">
            <h4>Secondary Damage</h4>
            <div class="weapon-attack-grid">
              <div class="form-group">
                <label>Secondary Damage</label>
                <input type="number" name="system.primary.secondary_damage" value="{{system.primary.secondary_damage}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Secondary Extra</label>
                <input type="number" name="system.primary.secondary_damage_extra" value="{{system.primary.secondary_damage_extra}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Secondary Type</label>
                <select name="system.primary.secondary_damage_type">
                  <option value="" {{#unless system.primary.secondary_damage_type}}selected{{/unless}}>None</option>
                  <option value="physical" {{#if (eq system.primary.secondary_damage_type "physical")}}selected{{/if}}>Physical</option>
                  <option value="heat" {{#if (eq system.primary.secondary_damage_type "heat")}}selected{{/if}}>Heat</option>
                  <option value="cold" {{#if (eq system.primary.secondary_damage_type "cold")}}selected{{/if}}>Cold</option>
                  <option value="lightning" {{#if (eq system.primary.secondary_damage_type "lightning")}}selected{{/if}}>Lightning</option>
                  <option value="dark" {{#if (eq system.primary.secondary_damage_type "dark")}}selected{{/if}}>Dark</option>
                  <option value="divine" {{#if (eq system.primary.secondary_damage_type "divine")}}selected{{/if}}>Divine</option>
                  <option value="arcane" {{#if (eq system.primary.secondary_damage_type "arcane")}}selected{{/if}}>Arcane</option>
                  <option value="psychic" {{#if (eq system.primary.secondary_damage_type "psychic")}}selected{{/if}}>Psychic</option>
                  <option value="toxic" {{#if (eq system.primary.secondary_damage_type "toxic")}}selected{{/if}}>Toxic</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        {{!-- Secondary Attack (if two-handed or special weapons) --}}
        <div class="secondary-attack-section">
          <h3>Secondary Attack (Optional)</h3>
          <div class="weapon-attack-grid">
            <div class="form-group">
              <label>Damage</label>
              <input type="number" name="system.secondary.damage" value="{{system.secondary.damage}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Extra Damage</label>
              <input type="number" name="system.secondary.damage_extra" value="{{system.secondary.damage_extra}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Damage Type</label>
              <select name="system.secondary.damage_type">
                <option value="physical" {{#if (eq system.secondary.damage_type "physical")}}selected{{/if}}>Physical</option>
                <option value="heat" {{#if (eq system.secondary.damage_type "heat")}}selected{{/if}}>Heat</option>
                <option value="cold" {{#if (eq system.secondary.damage_type "cold")}}selected{{/if}}>Cold</option>
                <option value="lightning" {{#if (eq system.secondary.damage_type "lightning")}}selected{{/if}}>Lightning</option>
                <option value="dark" {{#if (eq system.secondary.damage_type "dark")}}selected{{/if}}>Dark</option>
                <option value="divine" {{#if (eq system.secondary.damage_type "divine")}}selected{{/if}}>Divine</option>
                <option value="arcane" {{#if (eq system.secondary.damage_type "arcane")}}selected{{/if}}>Arcane</option>
                <option value="psychic" {{#if (eq system.secondary.damage_type "psychic")}}selected{{/if}}>Psychic</option>
                <option value="toxic" {{#if (eq system.secondary.damage_type "toxic")}}selected{{/if}}>Toxic</option>
              </select>
            </div>
            <div class="form-group">
              <label>Min Range</label>
              <input type="number" name="system.secondary.min_range" value="{{system.secondary.min_range}}" placeholder="1"/>
            </div>
            <div class="form-group">
              <label>Max Range</label>
              <input type="number" name="system.secondary.max_range" value="{{system.secondary.max_range}}" placeholder="1"/>
            </div>
          </div>
        </div>

      </div>
    </div>
    {{/if}}

    {{!-- Bonuses Tab --}}
    <div class="tab" data-group="primary" data-tab="bonuses">
      <div class="bonuses-content">

        {{!-- Resource Bonuses --}}
        <div class="resource-bonuses-section">
          <h3>Resource Bonuses</h3>
          <div class="resource-grid">
            <div class="resource-group">
              <h4>Health</h4>
              <div class="form-grid-2col">
                <div class="form-group">
                  <label>Max Bonus</label>
                  <input type="number" name="system.health.max" value="{{system.health.max}}" placeholder="0"/>
                </div>
                <div class="form-group">
                  <label>Recovery Bonus</label>
                  <input type="number" name="system.health.recovery" value="{{system.health.recovery}}" placeholder="0"/>
                </div>
              </div>
            </div>

            <div class="resource-group">
              <h4>Energy</h4>
              <div class="form-grid-2col">
                <div class="form-group">
                  <label>Max Bonus</label>
                  <input type="number" name="system.energy.max" value="{{system.energy.max}}" placeholder="0"/>
                </div>
                <div class="form-group">
                  <label>Recovery Bonus</label>
                  <input type="number" name="system.energy.recovery" value="{{system.energy.recovery}}" placeholder="0"/>
                </div>
              </div>
            </div>

            <div class="resource-group">
              <h4>Resolve</h4>
              <div class="form-grid-2col">
                <div class="form-group">
                  <label>Max Bonus</label>
                  <input type="number" name="system.resolve.max" value="{{system.resolve.max}}" placeholder="0"/>
                </div>
                <div class="form-group">
                  <label>Recovery Bonus</label>
                  <input type="number" name="system.resolve.recovery" value="{{system.resolve.recovery}}" placeholder="0"/>
                </div>
              </div>
            </div>

            <div class="resource-group">
              <h4>Movement</h4>
              <div class="form-group">
                <label>Movement Bonus</label>
                <input type="number" name="system.movement" value="{{system.movement}}" placeholder="0"/>
              </div>
            </div>
          </div>
        </div>

        {{!-- Attribute Bonuses --}}
        <div class="attribute-bonuses-section">
          <h3>Attribute Bonuses</h3>
          <div class="attribute-grid">
            <div class="form-group">
              <label>Physique</label>
              <input type="number" name="system.attributes.physique" value="{{system.attributes.physique}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Finesse</label>
              <input type="number" name="system.attributes.finesse" value="{{system.attributes.finesse}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Mind</label>
              <input type="number" name="system.attributes.mind" value="{{system.attributes.mind}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Knowledge</label>
              <input type="number" name="system.attributes.knowledge" value="{{system.attributes.knowledge}}" placeholder="0"/>
            </div>
            <div class="form-group">
              <label>Social</label>
              <input type="number" name="system.attributes.social" value="{{system.attributes.social}}" placeholder="0"/>
            </div>
          </div>
        </div>

        {{!-- Skills Bonuses Grid --}}
        <div class="skills-bonuses-section">
          <h3>Skill Bonuses</h3>

          <div class="skills-category">
            <h4>Basic Skills</h4>
            <div class="skills-grid">
              <div class="form-group">
                <label>Fitness</label>
                <input type="number" name="system.basic.fitness" value="{{system.basic.fitness}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Deflection</label>
                <input type="number" name="system.basic.deflection" value="{{system.basic.deflection}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Might</label>
                <input type="number" name="system.basic.might" value="{{system.basic.might}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Endurance</label>
                <input type="number" name="system.basic.endurance" value="{{system.basic.endurance}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Evasion</label>
                <input type="number" name="system.basic.evasion" value="{{system.basic.evasion}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Stealth</label>
                <input type="number" name="system.basic.stealth" value="{{system.basic.stealth}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Coordination</label>
                <input type="number" name="system.basic.coordination" value="{{system.basic.coordination}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Thievery</label>
                <input type="number" name="system.basic.thievery" value="{{system.basic.thievery}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Resilience</label>
                <input type="number" name="system.basic.resilience" value="{{system.basic.resilience}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Concentration</label>
                <input type="number" name="system.basic.concentration" value="{{system.basic.concentration}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Senses</label>
                <input type="number" name="system.basic.senses" value="{{system.basic.senses}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Logic</label>
                <input type="number" name="system.basic.logic" value="{{system.basic.logic}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Wildcraft</label>
                <input type="number" name="system.basic.wildcraft" value="{{system.basic.wildcraft}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Academics</label>
                <input type="number" name="system.basic.academics" value="{{system.basic.academics}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Magic</label>
                <input type="number" name="system.basic.magic" value="{{system.basic.magic}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Medicine</label>
                <input type="number" name="system.basic.medicine" value="{{system.basic.medicine}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Expression</label>
                <input type="number" name="system.basic.expression" value="{{system.basic.expression}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Presence</label>
                <input type="number" name="system.basic.presence" value="{{system.basic.presence}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Insight</label>
                <input type="number" name="system.basic.insight" value="{{system.basic.insight}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Persuasion</label>
                <input type="number" name="system.basic.persuasion" value="{{system.basic.persuasion}}" placeholder="0"/>
              </div>
            </div>
          </div>

          <div class="skills-category">
            <h4>Weapon Skills</h4>
            <div class="skills-grid">
              <div class="form-group">
                <label>Brawling</label>
                <input type="number" name="system.weapon.brawling" value="{{system.weapon.brawling}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Throwing</label>
                <input type="number" name="system.weapon.throwing" value="{{system.weapon.throwing}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Simple Melee</label>
                <input type="number" name="system.weapon.simpleMeleeWeapons" value="{{system.weapon.simpleMeleeWeapons}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Simple Ranged</label>
                <input type="number" name="system.weapon.simpleRangedWeapons" value="{{system.weapon.simpleRangedWeapons}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Complex Melee</label>
                <input type="number" name="system.weapon.complexMeleeWeapons" value="{{system.weapon.complexMeleeWeapons}}" placeholder="0"/>
              </div>
              <div class="form-group">
                <label>Complex Ranged</label>

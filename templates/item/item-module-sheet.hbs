<form class="{{cssClass}}" autocomplete="off">

  <header class="sheet-header">
    <img class="item-sheet-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class=""><input name="name" type="text" value="{{item.name}}" placeholder="Module Name" /></h1>
      <div class="module-meta">
        <span class="module-type">{{system.mtype}}</span>
        <span class="ruleset">Ruleset {{system.ruleset}}</span>
      </div>
    </div>
  </header>

  <section class="sheet-body item-sheet">
    {{> "systems/anyventure/templates/partials/items/description.hbs"}}

    {{#if system.options}}
    <div class="module-skill-tree">
      {{!-- Group options by tier --}}
      {{#each (groupByTier system.options) as |tierOptions tier|}}
        <div class="module-tier" data-tier="{{tier}}">
          {{!-- Check if it's an odd tier (1, 3, 5, 7) or even (2, 4, 6) --}}
          {{#if (isOddTier tier)}}
            {{!-- Single option for odd tiers --}}
            <div class="tier-options single-option">
              {{#each tierOptions as |option|}}
                <div class="module-option {{#if option.selected}}selected{{/if}}"
                     data-location="{{option.location}}"
                     data-can-select="true">
                  <div class="option-content">
                    <div class="option-name">{{option.name}}</div>
                    <div class="option-description">{{option.description}}</div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{else}}
            {{!-- Multiple options for even tiers (choose one) --}}
            <div class="tier-options multiple-options">
              {{#each tierOptions as |option|}}
                <div class="module-option {{#if option.selected}}selected{{/if}}"
                     data-location="{{option.location}}"
                     data-can-select="true">
                  <div class="option-content">
                    <div class="option-name">{{option.name}}</div>
                    <div class="option-description">{{option.description}}</div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
    {{/if}}
  </section>

</form>

<style>
.sheet-body.item-sheet {
  padding: 10px;
}

.module-meta {
  display: flex;
  gap: 10px;
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}

.module-type, .ruleset {
  background: #f0f0f0;
  padding: 2px 6px;
  border-radius: 3px;
}

.module-skill-tree {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 15px;
}

.module-tier {
  display: flex;
  justify-content: center;
}

.tier-options {
  display: flex;
  gap: 0.75rem;
  justify-content: center;
  width: 100%;
}

.tier-options.single-option {
  justify-content: center;
}

.tier-options.single-option .module-option {
  width: 50%;
}

.tier-options.multiple-options .module-option {
  width: 100%;
  flex: 1;
}

.module-option {
  padding: 12px;
  background-color: #333;
  color: white;
  border: 2px solid transparent;
  cursor: pointer;
  border-radius: 6px;
  transition: all 0.2s ease;
  min-height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module-option:hover {
  background-color: #444;
  border-color: #555;
}

.module-option.selected {
  background-color: #4a90e2;
  border-color: #357abd;
}

.module-option.selected:hover {
  background-color: #357abd;
  border-color: #2868a8;
}

.module-option.disabled {
  opacity: 0.5;
  cursor: not-allowed !important;
  background-color: #222;
  pointer-events: auto;
}

.module-option.disabled:hover {
  background-color: #222 !important;
  border-color: transparent !important;
}

.option-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.option-name {
  font-weight: bold;
  margin-bottom: 8px;
  font-size: 14px;
  color: white;
}

.option-description {
  font-size: 12px;
  line-height: 1.4;
  color: #ccc;
  font-weight: normal;
}

.module-option.selected .option-description {
  color: #e6f3ff;
}
</style>
{{!-- Spell Properties Partial --}}
<div class="spell-properties-section">
  <h3>Spell Properties</h3>
  
  <div class="spell-fields">
    <div class="form-group">
      <label>Complexity</label>
      <input type="number" name="system.complexity" value="{{system.complexity}}" data-dtype="Number" min="1" max="20" placeholder="4"/>
    </div>
    
    <div class="form-group">
      <label>Range</label>
      <select name="system.range" data-dtype="String">
        {{#each rangeTypes as |range|}}
        <option value="{{range}}" {{#if (eq ../system.range range)}}selected{{/if}}>{{capitalize range}}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="form-group">
      <label>Dodge Difficulty</label>
      <input type="number" name="system.dodgeDifficulty" value="{{system.dodgeDifficulty}}" data-dtype="Number" min="1" max="20" placeholder="6"/>
    </div>

    <div class="form-group">
      <label>Can be Ritual?</label>
      <input type="checkbox" name="system.ritual" {{#if system.ritual}}checked{{/if}}/>
    </div>
  </div>

  {{!-- Damage Properties --}}
  <div class="damage-section">
    <h3>Spell Damage</h3>
    <div class="damage-fields">
      <div class="form-group">
        <label>Damage</label>
        <input type="number" name="system.damage" value="{{system.damage}}" data-dtype="Number" placeholder="0"/>
      </div>
      
      <div class="form-group">
        <label>Damage Type</label>
        <select name="system.damageType" data-dtype="String">
          {{#each damageTypes as |type|}}
          <option value="{{type}}" {{#if (eq ../system.damageType type)}}selected{{/if}}>{{capitalize type}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>

  {{!-- Component --}}
  <div class="component-section">
    <h3>Component</h3>
    <div class="component-fields">
      <div class="form-group">
        <label>Component Name</label>
        <input type="text" name="system.component.name" value="{{system.component.name}}" placeholder="Material component"/>
      </div>
      
      <div class="form-group">
        <label>Component Cost</label>
        <input type="number" name="system.component.cost" value="{{system.component.cost}}" data-dtype="Number" placeholder="0"/>
      </div>
    </div>
  </div>

  {{!-- Special Properties --}}
  <div class="special-properties">
    <h3>Special Properties</h3>
    <div class="form-group stacked">
      <label>Notes</label>
      <textarea name="system.special" placeholder="Any special effects or notes about this spell">{{system.special}}</textarea>
    </div>
  </div>
</div>
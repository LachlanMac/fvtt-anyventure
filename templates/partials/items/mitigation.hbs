{{!-- Mitigation Partial --}}
<div class="mitigation-section">
  <h3>Damage Mitigation</h3>
  <div class="mitigation-grid">
    <div class="form-group mitigation-item">
      <label for="system.mitigation.physical" class="damage-type-physical">Physical</label>
      <input type="number" name="system.mitigation.physical" value="{{system.mitigation.physical}}" placeholder="0" min="0"/>
      {{#if system.mitigation.physical}}<span class="mitigation-value">{{system.mitigation.physical}}</span>{{/if}}
    </div>
    <div class="form-group mitigation-item">
      <label for="system.mitigation.heat" class="damage-type-heat">Heat</label>
      <input type="number" name="system.mitigation.heat" value="{{system.mitigation.heat}}" placeholder="0" min="0"/>

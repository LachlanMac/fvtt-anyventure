      {{#if system.mitigation.electric}}<span class="mitigation-value">{{system.mitigation.electric}}</span>{{/if}}
    </div>
    <div class="form-group mitigation-item">
      <label for="system.mitigation.dark" class="damage-type-dark">Dark</label>
      <input type="number" name="system.mitigation.dark" value="{{system.mitigation.dark}}" placeholder="0" min="0"/>
      {{#if system.mitigation.dark}}<span class="mitigation-value">{{system.mitigation.dark}}</span>{{/if}}
    </div>
    <div class="form-group mitigation-item">
      <label for="system.mitigation.divine" class="damage-type-divine">Divine</label>

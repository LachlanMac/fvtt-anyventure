      <div class="module-option">
        <input type="checkbox" name="system.options.option_1.selected" {{#if system.options.option_1.selected}}checked{{/if}}/>
        <div class="option-details">
          <input type="text" name="system.options.option_1.name" value="{{system.options.option_1.name}}" placeholder="Option Name"/>
          <textarea name="system.options.option_1.description" placeholder="Option Description">{{system.options.option_1.description}}</textarea>
          <input type="text" name="system.options.option_1.data" value="{{system.options.option_1.data}}" placeholder="Option Data"/>
        </div>
      </div>
    </div>


{{!-- Module Properties Partial --}}
<div class="module-properties-section">
  <h3>Module Properties</h3>
  
  <div class="module-fields">
    <div class="form-group">
      <label>Ruleset</label>
      <input type="number" name="system.ruleset" value="{{system.ruleset}}" data-dtype="Number" placeholder="1"/>
    </div>
    
    <div class="form-group">
      <label>Anyventure ID</label>
      <input type="text" name="system.anyventure_id" value="{{system.anyventure_id}}" placeholder="Module ID"/>
    </div>
  </div>


{{!-- Ability Properties Partial --}}
<div class="ability-properties-section">
  <h3>Ability Properties</h3>

  <div class="ability-fields">
    <div class="form-group">
      <label>Trigger / Timing</label>
      <input type="text" name="system.trigger" value="{{system.trigger}}" placeholder="{{#if (eq item.type 'action')}}During your turn{{else}}When a specific event occurs{{/if}}"/>
    </div>

    <div class="form-group">
      <label>Range</label>
      <input type="text" name="system.range" value="{{system.range}}" placeholder="Self"/>
    </div>

    <div class="form-group">
      <label>Target</label>
      <input type="text" name="system.target" value="{{system.target}}" placeholder="Self"/>
    </div>

    <div class="form-group">
      <label>Duration</label>
      <input type="text" name="system.duration" value="{{system.duration}}" placeholder="Instantaneous"/>
    </div>

    <div class="form-group stacked">
      <label>Requirements</label>
      <textarea name="system.requirements" rows="3" placeholder="Any special requirements to use this ability">{{system.requirements}}</textarea>
    </div>

    <div class="form-group stacked">
      <label>Effect</label>
      <textarea name="system.effect" rows="6" placeholder="What happens when you use this ability">{{system.effect}}</textarea>
    </div>
  </div>
</div>

{{!-- Equipment Tab Content --}}
<div class="equipment">
  <h3>Equipment</h3>
  
  {{!-- Weapons --}}
  <div class="equipment-section">
    <h4>Weapons</h4>
    <div class="items-header">
      <div class="item-name">Name</div>
      <div class="item-weight">Weight</div>
      <div class="item-damage">Damage</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create weapon" data-type="weapon"><i class="fas fa-plus"></i></a>
      </div>
    </div>
    
    <ol class="items-list">
      {{#each weapons as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-weight">{{item.system.weight}}</div>
        <div class="item-damage">{{item.system.weapon_data.primary.damage}}/{{item.system.weapon_data.primary.damage_extra}}</div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  {{!-- Armor --}}
  <div class="equipment-section">
    <h4>Armor</h4>
    <div class="items-header">
      <div class="item-name">Name</div>
      <div class="item-weight">Weight</div>
      <div class="item-mitigation">Mitigation</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create armor" data-type="armor"><i class="fas fa-plus"></i></a>
      </div>
    </div>
    
    <ol class="items-list">
      {{#each armor as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-weight">{{item.system.weight}}</div>
        <div class="item-mitigation">{{item.system.armor_data.base_mitigation}}</div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  {{!-- General Equipment --}}
  <div class="equipment-section">
    <h4>General Equipment</h4>
    <div class="items-header">
      <div class="item-name">Name</div>
      <div class="item-weight">Weight</div>
      <div class="item-value">Value</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create equipment" data-type="equipment"><i class="fas fa-plus"></i></a>
      </div>
    </div>
    
    <ol class="items-list">
      {{#each gear as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-weight">{{item.system.weight}}</div>
        <div class="item-value">{{item.system.value}}</div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</div>